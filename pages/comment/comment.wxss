/* pages/comment/comment.wxss */
.comment_wrap{
  width: 700rpx;
  margin: 10rpx auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.comment_wrap image{
  width: 40rpx;
  height: 40rpx;
}

.publish{
  width: 150rpx;
  height: 50rpx;
  font-size: 30rpx;
  color: #fff;
  background: #34a8e0;
  text-align: center;
  line-height: 50rpx;
  border-radius: 10rpx;
}

.disabled{
  color: #000;
  background: #ddd;
}

.text{
  width: 700rpx;
  margin: 20rpx auto 0;
  height: 400rpx;
  background: #ddd;
  padding: 20rpx;
  box-sizing: border-box;
  color: #333;
  font-size: 28rpx;
}
button{
  background-color:#fff;
  margin: 0!important;
  padding:0;
  border-radius:10rpx!important;
  color:#000;
  background:#ddd;
  width:150rpx;
  height:50rpx;
  font-size:30rpx;
  text-align:center;
  line-height:50rpx;
}
button::after{
  content: none;
}