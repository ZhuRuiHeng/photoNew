/**index.wxss**/
@import "../template/template.wxss";
page{
  background: #e4e4e4;
}
.container{
  padding-bottom: 100rpx;
}
.container{
  font-size: 26rpx;
  overflow: hidden;
  background-color: #e4e4e4;
}

.left.music_play{
  background: url(https://friend-check.playonwechat.com/static/images/music.png) no-repeat;
  background-size: 100%;
  -webkit-animation: music 3s linear infinite;
  animation: music 3s linear infinite;
  -webkit-tap-highlight-color: transparent;
}
@-webkit-keyframes music{
    0%{
        -webkit-transform:rotate(0);
        transform:rotate(0)
    }
    to{
        -webkit-transform:rotate(-3turn);
        transform:rotate(-3turn)
    }
}
@keyframes music{
    0%{
        -webkit-transform:rotate(0);
        transform:rotate(0)
    }
    to{
        -webkit-transform:rotate(-3turn);
        transform:rotate(-3turn)
    }
}


.notice{
  text-align: center;
}
.buttons{
  margin-top: 100rpx;
}
.buttons view{
  display: block;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  padding: 0 20rpx;
  background: #666;
  color: #fff;
  margin: 20rpx auto;
  text-align: center;
  cursor: pointer;
}
.buttons view.active{
  background: #34a8e0;
}
.buttons button{
  font-size: 26rpx;
  margin: 0;
  padding: 0;
  border-radius: 0;
  background: #34a8e0;
  color: #fff;
  line-height: inherit;
}
button::after{
  content: none;
}

.swiper{
    margin: 50rpx 0;
}
wx-swiper{ width:360px; height: 192px; margin:0 auto; }
wx-swiper wx-image{ width: 100%; height: 192px; }
.star-name{ font-family: PingFangSC-Regular; font-size: 23px; line-height: 23px; padding-top: 19px; padding-bottom: 9px; }
.star-birth{ font-family: PingFangSC-Light; padding-bottom: 19px; font-size: 11px; }
.single-star{ width:60%; height: 144px; padding:14rpx; display: inline-block; box-sizing: border-box; border: 1px solid #E8E8E8; margin-right: 4px; position: relative;}
.star-avatar{ width: 100%;height: inherit;border-radius: 20rpx;}
.star-box{ width: 90%; white-space: nowrap; margin:30rpx auto; }
.checkboxs{
  text-align:center;margin:30rpx 0;
  height: 60rpx;
  line-height: 60rpx;
}
.checkboxs image{
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 18rpx;
  z-index: 1;
}
.single-star image.radio{
  position: absolute;
  top: 10rpx;
  right: 10px;
  width: 50rpx;
  height: 50rpx;
}
.common .item{
    width: 48%;
    display: inline-block;
    margin: 1%;
    position: relative;
    text-align: left;
    height:380rpx;
    background: #fff;
}
.common .item image{
    width: 100%;
    height:380rpx;
}
.navbar{
  width: 100%;
  text-align: center;
  font-size: 26rpx;
  border-bottom: 1px solid #ddd;
  background: #fff;
}

.navbar .one{
    width: 33%;
    display: inline-block;
}
.navbar .two{
    width: 50%;
    display: inline-block;
}
.navbar view{
  flex: 1;
  padding: 18rpx 0 20rpx;
  cursor: pointer;
  background: #fff;
}
.navbar view image{
    width: 40rpx;
    height: 40rpx;
    position: relative;
    top: 6rpx;
    right: 6rpx;
}
.one.active{
  background: #aaf3ff;
}
.activity{
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  font-size: 24rpx;
  color: #ff4444;
}
