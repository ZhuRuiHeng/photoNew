<!--index.wxml-->
<import src="../template/template.wxml" />
<!--引入模板  -->
<template is="navBar"></template>
<template is="pretty" wx:if="{{show}}"></template>
<view class="container">
    <view class='swiper'>
        <scroll-view scroll-x="true" class="star-box" scroll-top="0" scroll-left="0">
            <view class="single-star" wx:for="{{imgUrls}}" >
                <image class='radio' bindtap='albumInform' wx:if="{{item.checked}}" data-index="{{index}}"
                       data-checked='{{item.checked}}' src="../img/radios.png" mode='widthFix'></image>
                <image class='radio' bindtap='albumInform' wx:else src="../img/radio.png" data-index="{{index}}"
                        data-checked='{{item.checked}}' mode='widthFix'></image>
                <image class="star-avatar" src="{{item.img}}"  style="display:inline-block" mode='widthFix'></image>
            </view>
        </scroll-view>
    </view>
    <view class='notice'>注：可以选择自己喜欢的模板，创建制作属于自己的照片集</view>
    <view class='buttons'>
         <view class='active' bindtap='photos'>制作照片集</view> 
    </view>
    <view class='checkboxs'>
            <image  wx:if="{{checkboxs}}"  bindtap="Change" data-check='1' 
                    src="../img/checka.png" mode='widthFix'></image>
            <image wx:else  bindtap="Change" data-check='2' 
                    src="../img/check.png"  mode='widthFix'></image>
          同意生成照片墙展示在首页
    </view>
</view>
<view>
</view>
