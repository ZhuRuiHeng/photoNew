@import "../template/template.wxss";
page{
  background: #e6e8f5;
}
.container{
    overflow: hidden;
    padding:0;
    box-sizing: border-box;
    width: 100%;
    font-size: 26rpx;
    background-color: #e6e8f5;
    padding-bottom: 200rpx;
    margin-top: 90rpx;
    position: relative;
}
.item{
  background: #fff;
  width: 94%;
  margin: 0rpx auto 20rpx;
  border-radius: 20rpx;
}
.item .top{
  display: flex;
  justify-content: flex-start;
  position: relative;
}
.item .top image.niceImg{
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    border: 2px solid #fff;
    box-sizing: border-box;
    margin-right: 20rpx;
}
.top{
    position: relative;
    padding:10rpx 20rpx;
    border-bottom: 1px solid #f7f7f7;
}
.top .shanchu{
    position: absolute;
    top: 0rpx;
    right: 20rpx;
    width: 60rpx;
    height: 50rpx;
}
.top .dels{
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    width: 30rpx;
    height: 30rpx;
}
.niceNames view{
   line-height: 46rpx;
   display: block;
   width: 200rpx;
   white-space:nowrap; overflow:hidden; text-overflow:ellipsis;
}
.niceNames view text{
  background: #e7e7e7;
  color: #717171;
  font-size: 20rpx;
  border-radius: 20rpx;
  display: inline-block;
  padding: 6rpx 12rpx;
  line-height: 22rpx;
}
.mid{
  text-align: center;
  margin: 0 auto;
  padding: 30rpx 0;
  width: 100%;
}
.mid image{
  width: 90%;
  margin: 0 auto;
}
.btm{
  width: 100%;
  text-align: center;
  display: flex;
  color: #000;
  height: 72rpx;
  line-height: 72rpx;
  border-top: 1px solid #f7f7f7;
}
.btm view{
  flex: 1;
}
.btm  .right{
    border-left:1px solid #f7f7f7; 
    border-right:1px solid #f7f7f7; 
}
.textBlock{
  display: inline-block;
  height:72rpx;
  line-height:72rpx;
}
.btm .right image,.chart image,.left image{
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 12rpx;
}
.right image,.left image{
  right: 10rpx;
}
.btm .left{
  padding-left: 20rpx;
}
.btm .chart view{
  cursor: pointer;
}
.btm button{
  font-size: 32rpx;
  padding: 0!important;
  margin: 0!important;
  border-radius: 0!important;
  height: 72rpx;
  line-height: 72rpx;
}
button:after{
  content: none;
}
.pretty{
  background: #e4e4e4;
}
.triangle:before{
			
	border-top:8px solid #fff;
	top:100%;
	left:46%;
}
.triangle:after{
	border-top:8px solid #e4e4e4;
	top:99%;
	left:46%;
}
button{
  background-color:none;

  font-size:26rpx;
  margin: 0!important;
  line-height:inherit;
  padding:26rpx 0;
}
button::after{
  content: none;
}
.navflex{
  width: 100%;
  display: flex;
  justify-content: space-around;
  text-align: center;
  font-size: 26rpx;
  color: #000;
  /* border-bottom: 1px solid #ddd; */
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 12;
}
.navflex .flex{
  display: block;
  width: 100%;
  cursor: pointer;
  padding:20rpx 0;
}
.navflex .flex.active text{
   border-bottom: 2px solid #ff4444;
}
.bg{
  display: block;
  /* position: absolute; */
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  /* opacity: 0.5; */
  z-index: 13;
  overflow: hidden;
  position:fixed;
}
.activity{
  background: url(http://ovhvevt35.bkt.clouddn.com/photo/activeBg.png) no-repeat;
  background-size: cover;
  position: absolute;
  z-index: 14;
  height: 80vh;
  width: 90%;
  margin: 0 auto;
  padding: 20rpx;
  box-sizing: border-box;
  top: 50%; 
  left: 50%;  
  -webkit-transform: translate(-50%,-50%);  
  -ms-transform: translate(-50%,-50%);  
  transform: translate(-50%,-50%);  
  overflow: hidden;
  border-radius: 20rpx;
}
.activityClose{
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}
.activityClose image{
  width: 50rpx;
  height: 50rpx;
}
.activityTop,.activityTime{
  text-align: center;
}
.activityTop image{
  width: 90%;
  vertical-align: middle;
  margin: 0 auto;
}
.activityTime{
  width: 260rpx;
  text-align: left;
  margin: 0 auto;
  font-size: 24rpx;
  color: #fff;
  border-radius: 10rpx;
  border: 2rpx solid #fff;
  padding:10rpx 20rpx;
  position: relative;
  background: -webkit-linear-gradient(left, #ffb9d8, #fff1c1); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #ffb9d8, #fff1c1); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #ffb9d8, #fff1c1); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #ffb9d8, #fff1c1); /* 标准的语法（必须放在最后） */
}
.activityTime:before,.activityTime:after{
	display:block;
	content:"";
	width:0px;
	height:0px;
	border-left:8px solid transparent;
	border-right:8px solid transparent;
	position:absolute;
}
.activityTime:before{
	border-bottom:8px solid #ffcae1;
	top:-16rpx;
	left:30%;
}
.explain{
    text-align: center;
    width: 90%;
    margin: 0 auto;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 24rpx;
    margin-top: -20rpx;
}
.jiangpinb{
  position: relative;
  top: 14rpx;
  font-weight: bold;
  font-size: 34rpx;
}
.explain view{
  color: #fff;
  vertical-align: middle;
  display: inline-block;
}
.jiangpin image{
  width: 100rpx;
  height: 100rpx;
}
.imgRules{
  text-align: center;
  margin-top: 30rpx;
}
.imgRules image{
    width: 70%;
}
.activityRules{
  background: #fff;
  border-radius: 10rpx;
  width: 86%;
  margin: 0 auto;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #895cd8;
  min-height: 300rpx;
}
.inGroup{
  position: absolute;
  bottom: 40rpx;
  left: 15%;
  width: 70%;
  margin: 30rpx auto 0!important;
  font-size: 32rpx;
  padding: 18rpx!important;
  color:#3e3d4b;
  border:1px solid #3c3e4b;
  border-radius: 6rpx;
  background: rgba(255, 255, 255, .5);
  /* background: -webkit-linear-gradient(#3acaff, #6fe8ff); 
  background: -o-linear-gradient(#3acaff, #6fe8ff); 
  background: -moz-linear-gradient(#3acaff, #6fe8ff); 
  background: linear-gradient(#3acaff, #6fe8ff);   */
}
.rule{
  display: flex;
  justify-content: flex-start;
}
.rule .rol{
    background: #a0bcf8;
    color: #fff;
    border-radius: 50%;
    width: 100rpx;
    height: 40rpx;
    line-height: 40rpx;
    display: inline-block;
    text-align: center;
    margin-right: 10rpx;
}
.newRules{
  position: fixed;
  top: 90rpx;
  right: -20rpx;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  padding: 10rpx 20rpx 10rpx 16rpx;
  background: rgba(0, 0, 0, 0.6);
  z-index: 12;
  color: #fff;
  font-size: 22rpx;
  cursor: pointer;
}
.wines{
  padding: 20rpx;
  box-sizing: border-box;
}
.wines .item{
  position: relative;
  display: flex;
  justify-content: flex-start;
  font-size: 28rpx;
  padding: 20rpx 0;
}
.wines .item text{
  color: #f5b141;
}
.wines .item:after{
   content:" ";
    display: inline-block;
    width:100%;
    position:absolute;
    bottom:0;
    right:0;
    border:1px solid #e5e5e5;
    -webkit-transform:scaleY(0.5);
    transform:scaleY(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.wines .item image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.wines .title{
  text-align: center;
  font-size: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #ddd;
}
.button{
  width:200rpx;
  text-align: center;
  height:60rpx;
  line-height:60rpx;
  border-radius:10rpx;
  padding:0 20rpx;
  background:#34a8e0;
  color:#fff;
  cursor:pointer;
  margin: 30rpx auto;
  position: relative;
}
.wines .content{
  line-height: 56rpx;
}
.item .addTime{
  color: #626262;
  font-size: 22rpx;
  position: absolute;
  right:20rpx;
  bottom: 20rpx; 
}
.mid .button-hover{
  background: #fff!important;
  color: #626226!important;
}