@import "../template/template.wxss";
page{
  background: #fff;
}
.container{
    overflow: hidden;
    padding:0;
    box-sizing: border-box;
    width: 100%;
    font-size: 26rpx;
    background-color: #fff;
    padding-bottom: 200rpx;
    margin-top: 90rpx;
}
.item{
  background: #fff;
  width: 100%;
}
.item .top{
  display: flex;
  justify-content: flex-start;
}
.item .top image.niceImg{
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    border: 2px solid #fff;
    box-sizing: border-box;
    margin-right: 20rpx;
}
.top{
    position: relative;
    padding:10rpx 20rpx;
    border-bottom: 1px solid #ddd;
}
.top .shanchu{
    position: absolute;
    top: 0rpx;
    right: 20rpx;
    width: 60rpx;
    height: 50rpx;
}
.top .dels{
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    width: 30rpx;
    height: 30rpx;
}
.niceNames view{
  line-height: 46rpx;
}
.niceNames view text{
  background: #e7e7e7;
  color: #717171;
  font-size: 20rpx;
  border-radius: 20rpx;
  display: inline-block;
  padding: 6rpx 12rpx;
  line-height: 22rpx;
  margin: 0 10rpx;
}
.mid{
  text-align: center;
  margin: 0 auto;
  padding: 30rpx 0;
  width: 100%;
}
.mid image{
  width: 300rpx;
}
.btm{
  width: 100%;
  background: #000;
  opacity: 0.6;
  display: flex;
  color: #fff;
  height: 72rpx;
  line-height: 72rpx;
}
.btm view{
  flex: 1;
}
.btm .right image{
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 10rpx;
}
.btm .left{
  padding-left: 20rpx;
}
.btm .right{
  display: flex;
  justify-content: space-around;
  text-align:center;
}
.btm .right view{
  cursor: pointer;
}
.btm button{
  font-size: 32rpx;
  padding: 0!important;
  margin: 0!important;
  border-radius: 0!important;
  height: 72rpx;
  line-height: 72rpx;
  background: #000;
}
button:after{
  content: none;
}
.pretty{
  background: #e4e4e4;
}
.triangle:before{
			
	border-top:8px solid #fff;
	top:100%;
	left:46%;
}
.triangle:after{
	border-top:8px solid #e4e4e4;
	top:99%;
	left:46%;
}
button{
  background-color:#fff;
  font-size:26rpx;
  margin: 0!important;
  line-height:inherit;
  padding:26rpx 0;
  border-radius:0!important;
}
button::after{
  content: none;
}
.navflex{
  width: 100%;
  display: flex;
  justify-content: space-around;
  text-align: center;
  font-size: 26rpx;
  color: #000;
  border-bottom: 1px solid #ddd;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.navflex .flex{
  display: block;
  width: 100%;
  cursor: pointer;
  padding:20rpx 0;
}
.navflex .flex.two{
  border-left: 1px solid #ddd;
  border-right: 1px solid #ddd;
}
.navflex .flex.active{
   background: #aaf3ff; 
}
.bg{
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
  z-index: 5;
  overflow: hidden;
}
.activity{
  background: url(http://ovhvevt35.bkt.clouddn.com/photo/activeBg.png) no-repeat;
  background-size: cover;
  position: absolute;
  z-index: 6;
  height: 80vh;
  width: 90%;
  margin: 0 auto;
  padding: 20rpx;
  box-sizing: border-box;
  top: 50%; 
  left: 50%;  
  -webkit-transform: translate(-50%,-50%);  
  -ms-transform: translate(-50%,-50%);  
  transform: translate(-50%,-50%);  
  overflow: hidden;
}
.activityClose{
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}
.activityClose image{
  width: 50rpx;
  height: 50rpx;
}
.activityTop,.activityTime{
  text-align: center;
}
.activityTop image{
  width: 90%;
  vertical-align: middle;
  margin: 0 auto;
}
.activityTime{
  width: 260rpx;
  text-align: left;
  margin: 0 auto;
  font-size: 28rpx;
  color: #fff;
  border-radius: 10rpx;
  border: 2rpx solid #fff;
  padding:10rpx 20rpx;
  position: relative;
  background: -webkit-linear-gradient(left, #ffb9d8, #fff1c1); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #ffb9d8, #fff1c1); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #ffb9d8, #fff1c1); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #ffb9d8, #fff1c1); /* 标准的语法（必须放在最后） */
}
.activityTime:before,.activityTime:after{
	display:block;
	content:"";
	width:0px;
	height:0px;
	border-left:8px solid transparent;
	border-right:8px solid transparent;
	position:absolute;
}
.activityTime:before{
	border-bottom:8px solid #ffcae1;
	top:-16rpx;
	left:30%;
}
.explain{
    text-align: center;
    width: 90%;
    margin: 0 auto;
    height: 90rpx;
    line-height: 90rpx;
}
.explain view{
  color: #fff;
  vertical-align: middle;
  display: inline-block;
}
.jiangpin image{
  width: 100rpx;
  height: 100rpx;
}
.imgRules{
  text-align: center;
  margin-top: 30rpx;
}
.imgRules image{
    width: 70%;
}
.activityRules{
  background: #fff;
  border-radius: 10rpx;
  width: 86%;
  margin: 0 auto;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #895cd8;
}
.inGroup{
  width: 70%;
  margin: 30rpx auto!important;
  font-size: 32rpx;
  padding: 18rpx!important;
  color:#fff;
  background: -webkit-linear-gradient(#3acaff, #6fe8ff); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(#3acaff, #6fe8ff); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(#3acaff, #6fe8ff); /* Firefox 3.6 - 15 */
  background: linear-gradient(#3acaff, #6fe8ff); /* 标准的语法 */
}
.rule{
  display: flex;
  justify-content: flex-start;
}
.rule .rol{
    background: #a0bcf8;
    color: #fff;
    border-radius: 50%;
    width: 100rpx;
    height: 40rpx;
    line-height: 40rpx;
    display: inline-block;
    text-align: center;
    margin-right: 10rpx;
}