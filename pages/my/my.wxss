/*new  */
.container{
    overflow-x: hidden;
    padding:0;
    box-sizing: border-box;
    width: 100%;
    font-size: 26rpx;
    padding-bottom: 100rpx;
    text-align: center;
}
.item{
    width: 94%;
    margin: 10rpx auto;
    position: relative;
    padding: 20rpx;
    background: #fff;
    border-radius: 10rpx;
    box-sizing: border-box;
    display: inline-block;
    z-index: 1;
}
.item image{
  width: 460rpx;
  height: 400rpx;
  position: relative;
  left: 60rpx;
  top: -60rpx;
}
.timeWho{
  position: relative;
  height:1.4rem;
}
.timeWho input{
   border-top: 1px solid #ddd;
    width: 100%;
    text-decoration:none; 
    display:block; 
    float:left;  
    overflow:hidden;          /*超出部分隐藏*/
    white-space:nowrap;
    /*文本溢出用"..."表示*/
    text-overflow:ellipsis;                    /*适用IE*/
    -o-text-overflow:ellipsis;                 /*适用opera*/
    -moz-binding: url('ellipsis.xml#ellipsis');/*适用火狐(firefox通过XUL实现效果)*/
    z-index: 1;
}
.timeWho .setting{
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    bottom: 10rpx;
    right: 0rpx;
}
.newAdd{
  position: relative;
}
.newAdd .niceImg{
    top: 10rpx;
}
.musicTip{
  width: 100%;
  display: flex;
  justify-content: flex-start;
}
.musicTip image{
    width: 60rpx;
    height: 60rpx;
    position: relative;
    top: -4rpx;
}
.musicTip view{
  width:100%;
  text-decoration:none; 
    display:block; 
    float:left;  
    overflow:hidden;          /*超出部分隐藏*/
    white-space:nowrap;
    /*文本溢出用"..."表示*/
    text-overflow:ellipsis;                    /*适用IE*/
    -o-text-overflow:ellipsis;                 /*适用opera*/
    -moz-binding: url('ellipsis.xml#ellipsis');/*适用火狐(firefox通过XUL实现效果)*/
}
.hidden{
  overflow: hidden;
  height: 100vh!important;
}
.footer{
  font-size: 32rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color:#f2f2f2;
  z-index: 9;
}
.footer view{
    text-align: center;
    height: 92rpx;
    line-height: 92rpx;
    background: #fff;
    position: relative;
}
.cancel{
  margin-top: 10rpx;
}
 .poster:after{
    content:" ";
    display: inline-block;
    width:100%;
    position:absolute;
    bottom:0;
    right:0;
    border:1px solid #e5e5e5;
    -webkit-transform:scaleY(0.5);
    transform:scaleY(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
} 
.bg{
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
  z-index: 6;
}
.item .dels{
  width: 50rpx;
  height: 40rpx;
  position: absolute;
  top: 0rpx;
  right: 56rpx;
  cursor: pointer;
}
.pop .closePop{
  position: absolute;
  width: 100%;
}
.pop .closePop .dels{
  position: absolute;
  top: 0rpx;
  right: 30rpx;
}
.item .dels image,.pop .closePop .dels{
  width: 46rpx;
