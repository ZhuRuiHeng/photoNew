@import "../template/template.wxss";
page{
  background: #e4e4e4;
}
.headerInform{
    margin: 0 auto;
    width: 400rpx;
    position: absolute;
    z-index: 6; 
    top: 50%; 
    left: 50%;  
    -webkit-transform: translate(-50%,-50%);  
    -ms-transform: translate(-50%,-50%);  
    transform: translate(-50%,-50%)
}
.header{
   text-align: center;
   position: relative;
   color: #fff;
}
.header .id{
  line-height: 50rpx;
}
.bg-blur {
    width: 100%;
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    -webkit-filter: blur(5px);
    -moz-filter: blur(5px);
    -o-filter: blur(5px);
    -ms-filter: blur(5px);
    filter: blur(5px);
}
.header .headerInform image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-sizing: border-box;
}
.niceInform{
  width: 300rpx;
  background:rgba(0,0,0,0.5);
  color: #fff;
  border-radius: 20rpx;
  margin: 0 auto;
  display: inline-block;
  padding: 10rpx 0;
}
.niceInform view{
  line-height: 36rpx;
}
.niceInform .niceFun{
    font-size: 24rpx;
}
.niceInform .niceName{
    width: 300rpx;
    white-space:nowrap;overflow:hidden;text-overflow:ellipsis;
}
.bgImage,.bgImage image{
  width: 100%;
}
.navbar{
  display: flex;
  text-align: center;
}
.navbar view{
  flex: 1;
  padding: 18rpx 0 20rpx;
  cursor: pointer;
  background: #fff;
}
.navbar view image{
    width: 40rpx;
    height: 40rpx;
    position: relative;
    top: 6rpx;
    right: 6rpx;
}
.one.active{
  background: #aaf3ff;
}
.two.active{
  background: #fedcff;
}
/*new  */
.container{
    overflow-x: hidden;
    padding:0;
    box-sizing: border-box;
    width: 100%;
    font-size: 26rpx;
    background-color: #e4e4e4;
    margin-bottom: 200rpx;
}
.item{
    width: 31%;
    position: relative;
    padding: 10rpx;
    margin: 1%;
    background: #fff;
    box-sizing: border-box;
    display: inline-block;
    z-index: 1;
}
.item image{
  width: 100%;
  height: 180rpx;
  position: relative;
}
.timeWho{
  position: relative;
  height:1.4rem;
}
.timeWho input{
   border-top: 1px solid #ddd;
    width: 100%;
    text-decoration:none; 
    display:block; 
    float:left;  
    overflow:hidden;          /*超出部分隐藏*/
    white-space:nowrap;
    /*文本溢出用"..."表示*/
    text-overflow:ellipsis;                    /*适用IE*/
    -o-text-overflow:ellipsis;                 /*适用opera*/
    -moz-binding: url('ellipsis.xml#ellipsis');/*适用火狐(firefox通过XUL实现效果)*/
    z-index: 1;
}
.timeWho .setting{
    width: 20rpx;
    position: absolute;
    bottom: 10rpx;
    right: 0rpx;
}
.newAdd{
  position: relative;
}
.newAdd .niceImg{
    top: -26rpx;
}
.musicTip{
  width: 100%;
  display: flex;
  justify-content: flex-start;
}
.musicTip image{
    width: 60rpx;
    height: 60rpx;
    position: relative;
    top: -4rpx;
}
.musicTip view{
  width:100%;
  text-decoration:none; 
    display:block; 
    float:left;  
    overflow:hidden;          /*超出部分隐藏*/
    white-space:nowrap;
    /*文本溢出用"..."表示*/
    text-overflow:ellipsis;                    /*适用IE*/
    -o-text-overflow:ellipsis;                 /*适用opera*/
    -moz-binding: url('ellipsis.xml#ellipsis');/*适用火狐(firefox通过XUL实现效果)*/
}
.hidden{
  overflow: hidden;
  height: 100vh!important;
}
.footer{
  font-size: 32rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color:#f2f2f2;
  z-index: 9;
}
.footer view{
    text-align: center;
    height: 92rpx;
    line-height: 92rpx;
    background: #fff;
    position: relative;
}
.cancel{
  margin-top: 10rpx;
}
 .poster:after{
    content:" ";
    display: inline-block;
    width:100%;
    position:absolute;
    bottom:0;
    right:0;
    border:1px solid #e5e5e5;
    -webkit-transform:scaleY(0.5);
    transform:scaleY(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
} 
.bg{
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
  z-index: 6;
}
.item .dels{
  width: 50rpx;
  height: 40rpx;
  position: absolute;
  top: -7rpx;
  right: -6rpx;
  cursor: pointer;
}
.pop .closePop{
  position: absolute;
  width: 100%;
}
.pop .closePop .dels{
  position: absolute;
  top: 0rpx;
  right: 30rpx;
}
.item .dels image,.pop .closePop .dels{
  width: 36rpx;
  height: 36rpx;
}
.pop{
  padding: 20rpx;
  width: 80%;
  border-radius: 10rpx;
  background: #000;
  opacity: 0.7;
  color: #fff;
  font-size: 26rpx;
  position: absolute;
  z-index: 6;  
  top: 50%; left: 50%;  
  -webkit-transform: translate(-50%,-50%);  
  -ms-transform: translate(-50%,-50%);  
  transform: translate(-50%,-50%)
}
.pop .poster{
  padding: 20rpx 0;
  position: relative;
}
