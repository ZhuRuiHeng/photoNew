}
.header{
   text-align: center;
   position: relative;
   color: #fff;
}
.header .id{
  line-height: 50rpx;
}
.bg-blur {
    width: 100%;
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    -webkit-filter: blur(5px);
    -moz-filter: blur(5px);
    -o-filter: blur(5px);
    -ms-filter: blur(5px);
    filter: blur(5px);
}
.header .headerInform image.avatarUrl{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-sizing: border-box;
}
.niceName{
  font-size: 36rpx;
}
.niceInform{
  width: 260rpx;
  background:#fad01c;
  color: #7c3c00;
  border-radius: 30rpx;
  margin: 0 auto;
  display: inline-block;
  padding:0 0 10rpx 0;
  box-sizing: border-box;
}
.niceInform view{
  line-height: 36rpx;
}
.niceInform .niceFun{
    font-size: 24rpx;
}
.niceFun image{
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 10rpx;
}
.niceInform .niceName{
    width: 300rpx;
    white-space:nowrap;overflow:hidden;text-overflow:ellipsis;
}
.bgImage,.bgImage image{
  width: 100%;
  height: 646rpx;
}
.bgImage .bg{
  background: rgba(0, 0, 0, 0.4);
