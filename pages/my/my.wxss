@import "../template/template.wxss";
page{
  background: #e6e8f5;
}
.headerInform{
    margin: 0 auto;
    width: 400rpx;
    position: absolute;
    z-index: 6; 
    top: 40%; 
    left: 50%;  
    -webkit-transform: translate(-50%,-50%);  
    -ms-transform: translate(-50%,-50%);  
