page{
  background: #e4e4e4;
}
.container{
    overflow: hidden;
    padding: 20rpx;
    box-sizing: border-box;
    width: 100%;
    font-size: 26rpx;
    background-color: #e4e4e4;
    margin-bottom: 100rpx;
}
.item{
    width: 31%;
    position: relative;
    padding: 10rpx;
    margin: 1%;
    background: #fff;
    box-sizing: border-box;
    display: inline-block;
}
.niceImg image{
    width: 100%;
    height: 190rpx;
}
image.del{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  cursor: pointer;
}
.timeWho{
  display: flex;
  justify-content: flex-start;
  height: 50rpx;
  line-height: 50rpx;
  color: #666;
  margin-top: 6rpx;
}
.timeWho image{
    width: 50rpx;
    height: 50rpx;
    border-radius: 6rpx;
    margin-right: 4rpx;
}
.timeWho view{
  font-size: 18rpx;
}
.button{
   width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    text-align: center;
    background: #34a8e0;
    color: #fff;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
}