page{
  background: #e4e4e4;
}
.container{
    overflow: hidden;
    padding:20rpx 10rpx;
    box-sizing: border-box;
    width: 100%;
    font-size: 26rpx;
    background-color: #e4e4e4;
    margin-bottom: 100rpx;
}
.item{
    width: 31%;
    position: relative;
    padding: 10rpx;
    margin: 1%;
    background: #fff;
    box-sizing: border-box;
    display: inline-block;
}
.item image{
  width: 100%;
  height: 180rpx;
  position: relative;
}
.timeWho input{
   border-top: 1px solid #ddd;
    width: 100%;
    text-decoration:none; 
    display:block; 
    float:left;  
    overflow:hidden;          /*超出部分隐藏*/
    white-space:nowrap;
    /*文本溢出用"..."表示*/
    text-overflow:ellipsis;                    /*适用IE*/
    -o-text-overflow:ellipsis;                 /*适用opera*/
    -moz-binding: url('ellipsis.xml#ellipsis');/*适用火狐(firefox通过XUL实现效果)*/
}
.newAdd{
  position: relative
}
.newAdd .niceImg{
    top: -26rpx;
}
.musicTip{
  width: 100%;
  display: flex;
  justify-content: flex-start;
}
.musicTip image{
    width: 60rpx;
    height: 60rpx;
    position: relative;
    top: -4rpx;
}
.musicTip view{
  width:100%;
  text-decoration:none; 
    display:block; 
    float:left;  
    overflow:hidden;          /*超出部分隐藏*/
    white-space:nowrap;
    /*文本溢出用"..."表示*/
    text-overflow:ellipsis;                    /*适用IE*/
    -o-text-overflow:ellipsis;                 /*适用opera*/
    -moz-binding: url('ellipsis.xml#ellipsis');/*适用火狐(firefox通过XUL实现效果)*/
}
.hidden{
  overflow: hidden;
  height: 100vh!important;
}
.footer{
  font-size: 32rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color:#f2f2f2;
  z-index: 9;
}
.footer view{
    text-align: center;
    height: 92rpx;
    line-height: 92rpx;
    background: #fff;
    position: relative;
}
.cancel{
  margin-top: 10rpx;
}
.poster:after{
    content:" ";
    display: inline-block;
    width:100%;
    position:absolute;
    top:0;
    right:0;
    border:1px solid #e5e5e5;
    -webkit-transform:scaleY(0.5);
    transform:scaleY(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.bg{
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
  z-index: 6;
}
.item .dels{
  width: 50rpx;
  height: 40rpx;
  position: absolute;
  top: -7rpx;
  right: -6rpx;
  cursor: pointer;
}
.item .dels image{
  width: 36rpx;
  height: 36rpx;
}