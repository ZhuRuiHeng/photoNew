.pretty{
  position: fixed;
  bottom: 120rpx;
  left: 100rpx;
  width: 380rpx;
  display: flex;
  text-align: center;
  font-size: 26rpx;
  background: #fff;
  border-radius: 16rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0rpx 0 2rpx 0;
  z-index: 99;
  border:1px solid #e4e4e4;
}
.pretty1 image{
  width: 42rpx;
  height: 42rpx;
  position: relative;
  top: 14rpx;
  margin-right: 6rpx;
}
.pretty2 image{
  width: 60rpx;
  height: 60rpx;
  position: relative;
  top: 10rpx;
  margin-right: 6rpx;
}
.pretty text{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
}
.pretty2 text{
  position: relative;
  top: -6rpx;
}
.pretty view{
  flex: 1;
}
.navBar .itemBar image{
  width: 60rpx;
  height: 60rpx;
}
.triangle:before,.triangle:after{
	display:block;
	content:"";
	width:0px;
	height:0px;
	border-left:8px solid transparent;
	border-right:8px solid transparent;
	position:absolute;
}
.triangle:before{
	border-top:8px solid #c2e1f5;
	top:100%;
	left:46%;
}
.triangle:after{
	border-top:8px solid #fff;
	top:99%;
	left:46%;
}
