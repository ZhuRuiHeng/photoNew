/*自定义复制微信号弹窗*/
.navBarbox{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  background: #fff;
  padding: 10rpx 0;
  border-top: 1px solid #ddd;
  margin-top: 100rpx;
  z-index: 99;
}
.navBar{
  width: 100%;
  display: flex;
  text-align: center;
}
.navBar .itemBar{
  flex: 1;
  position: relative;
  z-index: 99;
}
navigator{
  width: 100%;
  height: inherit;
}
