@import "../template/template.wxss";
page{
  background: #e6e8f5;
}
.container{
  padding-bottom: 100rpx;
}
.navbar{
  width: 100%;
  font-size: 26rpx;
  border-bottom: 1px solid #ddd;
  background: #fff;
  color: #fff;
}

.navbar .one{
    width: 29%;
    display: inline-block;
    text-align: left;
    padding:20rpx 0 0 30rpx;
    box-sizing: border-box;
    margin: 2%;
    border-radius: 12rpx;
}
.navbar .two{
    width: 50%;
    display: inline-block;
}
.navbar view{
  flex: 1;
  padding: 0 0 20rpx;
  cursor: pointer;
}
.navbar view image{
    width: 60rpx;
    height: 60rpx;
    position: relative;
    top: 6rpx;
    right: 6rpx;
}
.one.active{
  background: #aaf3ff;
}
.common{
  width: 100%;
  background: #e6e8f5;
}
.common .item{
    width: 48%;
    display: inline-block;
    margin: 1%;
    position: relative;
    text-align: left;
    height:380rpx;
    background: #fff;
}
.common .item image{
    width: 100%;
    height:380rpx;
}
.video .little{
    position: absolute;
    top: 0;
    left: 20rpx; 
}
.video image.little{
    width: 60rpx;
    height: 60rpx;
    background: #ed7b95;
}
.pretty{
  background: #e4e4e4;
}
.triangle:before{
			
	border-top:8px solid #fff;
	top:100%;
	left:46%;
}
.triangle:after{
	border-top:8px solid #e4e4e4;
	top:99%;
	left:46%;
}
.common .pwIndexs image{
    /* position: relative;
    top: -80rpx; */
}
.activity{
  position: absolute;
  top: 0;
  right: 0;
  font-size: 20rpx;
  color: #fff;
  width: 0;
  height: 0;
  border-top: 80rpx solid #ad0b16;
  border-left: 80rpx solid transparent; 
  z-index: 9;
}
.activity1{
  z-index: 9;
  position: absolute;
  top: 16rpx;
  right: 0;
  font-size: 20rpx;
  color: #fff;
  -webkit-transform: rotate(45deg);  
 -moz-transform: rotate(45deg);  
}
.nowTitle{
  font-size: 30rpx;
  line-height: 66rpx;
  vertical-align: middle;
  background: #fff;
  padding: 0 20rpx;
}
.nowTitle image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}