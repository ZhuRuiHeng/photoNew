<!--index.wxml-->
<import src="../template/template.wxml" />
<!--引入模板  -->
<template is="navBar"></template>
<template is="pretty" wx:if="{{show}}"></template>
<view class="container">
    <view class='management'>
        <view class="left {{music_play?'music_play':''}}" bindtap="bindPlay"></view>
        <view class='right' bindtap='management'>照片管理</view>
    </view>
    <view class='photo'>
        <image wx:for="{{photos}}" data-index='{{index+1}}' data-position='{{item.position}}' 
              class="item{{item.position}} small {{move==false?'ball':''}}" bindtap='prewImg' 
              data-picture='{{item.photo_url}}'
              mode='aspectFill' src="{{item.photo_url}}" ></image>
    </view>
    <view class='notice'>注：自己可以上传多张，每个朋友只能上传一张</view>
    <view class='buttons'>
        <view class='active' bindtap='produce' wx:if="{{finish==true}}">生成照片墙</view>
        <view class='active' bindtap='upPhoto' wx:if="{{finish==false}}">上传照片</view>
        <view class='active' bindtap='friends' wx:if="{{finish==false}}">邀请好友拼图</view>
    </view>
    <view class='checkboxs'>
            <image  wx:if="{{checkboxs==1}}"  bindtap="Change" data-check='1' 
                    src="../img/checka.png" mode='widthFix'></image>
            <image wx:else  bindtap="Change" data-check='0' 
                    src="../img/check.png"  mode='widthFix'></image>
          同意生成照片墙展示在首页
    </view>
