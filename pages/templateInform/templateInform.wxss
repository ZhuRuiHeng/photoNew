/**index.wxss**/
@import "../template/template.wxss";
page{
  background-color: #fff;
}
.container{
  font-size: 26rpx;
  overflow: hidden;
  background-color: #fff;
}
.management{
    display: flex;
    justify-content: space-between;
    height: 50rpx;
    line-height: 50rpx;
    padding: 10rpx 20rpx;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    box-sizing: border-box;
    z-index: 9;
}
.management .left{
  width: 50rpx;
  height: 50rpx;
  z-index: 1;
  border-radius: 50%;
  background: url(https://friend-check.playonwechat.com/static/images/stop_music.png) no-repeat;
  background-size: 100%;
}
.left.music_play{
  background: url(https://friend-check.playonwechat.com/static/images/music.png) no-repeat;
  background-size: 100%;
  -webkit-animation: music 3s linear infinite;
  animation: music 3s linear infinite;
  -webkit-tap-highlight-color: transparent;
}
@-webkit-keyframes music{
    0%{
        -webkit-transform:rotate(0);
        transform:rotate(0)
    }
    to{
        -webkit-transform:rotate(-3turn);
        transform:rotate(-3turn)
    }
}
@keyframes music{
    0%{
        -webkit-transform:rotate(0);
        transform:rotate(0)
    }
    to{
        -webkit-transform:rotate(-3turn);
        transform:rotate(-3turn)
    }
}

.management .right{
    background: #34a8e0;
    color: #fff;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 10rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
}
.notice{
  text-align: center;
  margin-top: 20rpx;
}
.buttons{
  padding-bottom:40rpx; 
}
.buttons view{
  display: block;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  padding: 0 20rpx;
  background: #666;
  color: #fff;
  margin: 20rpx auto;
  text-align: center;
  cursor: pointer;
}
.checkboxs{
  margin-bottom: 100rpx;
}
.buttons view.active{
  background: #34a8e0;
}
.buttons button{
  font-size: 26rpx;
  margin: 0;
  padding: 0;
  border-radius: 0;
  background: #34a8e0;
  color: #fff;
  line-height: inherit;
}
button::after{
  content: none;
}
.photo{
  margin: -20rpx auto 0;
  text-align: center;
  position: relative;
  width: 100%;
  height: 800rpx;
}
.photo .thumb{
  width: 100%;
  height: 800rpx;
}

@-webkit-keyframes an_photo{
    0%{
        opacity:0
    }
    to{
        opacity:1
    }
}
@keyframes an_photo{
    0%{
        opacity:0
    }
    to{
        opacity:1
    }
}
@-webkit-keyframes beat{
    0%{
        -webkit-transform:scale(1);
        transform:scale(1)
    }
    5%{
        -webkit-transform:scale(1.04);
        transform:scale(1.04)
    }
    10%{
        -webkit-transform:scale(1.02);
        transform:scale(1.02)
    }
    15%{
        -webkit-transform:scale(1.04);
        transform:scale(1.04)
    }
    50%{
        -webkit-transform:scale(1);
        transform:scale(1)
    }
    to{
        -webkit-transform:scale(1);
        transform:scale(1)
    }
}
@keyframes beat{
    0%{
        -webkit-transform:scale(1);
        transform:scale(1)
    }
    5%{
        -webkit-transform:scale(1.04);
        transform:scale(1.04)
    }
    10%{
        -webkit-transform:scale(1.02);
        transform:scale(1.02)
    }
    15%{
        -webkit-transform:scale(1.04);
        transform:scale(1.04)
    }
    50%{
        -webkit-transform:scale(1);
        transform:scale(1)
    }
    to{
        -webkit-transform:scale(1);
        transform:scale(1)
    }
}
.checkboxs{
  text-align:center;
  margin:0 0 30rpx 0;
  height: 60rpx;
  line-height: 60rpx;
}
.checkboxs image{
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 18rpx;
  z-index: 1;
}
.photo .index{
    position: absolute;
    width: 100%;
    height: 100%;
    /* background: rgba(0,0,0,0.3); */
}
.photo .play{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  margin: 0 auto;
  z-index: 6; 
  top: 50%; 
  left: 50%;  
  -webkit-transform: translate(-50%,-50%);  
  -ms-transform: translate(-50%,-50%);  
  transform: translate(-50%,-50%)
}
.pretty{
  background: #e4e4e4;
}
.triangle:before{
			
	border-top:8px solid #fff;
	top:100%;
	left:46%;
}
.triangle:after{
	border-top:8px solid #e4e4e4;
	top:99%;
	left:46%;
}
form{
  display:block;
  width:200rpx;
  height:60rpx;
  line-height:60rpx;
  border-radius:10rpx!important;
  background:#34a8e0;
  color:#fff;
  margin:20rpx auto;
  text-align:center;
  cursor:pointer;
  padding:0 20rpx;
}
button{
  background-color:#fff;
  font-size:26rpx;
  margin: 0!important;
  line-height:inherit;
  padding:0!important;
  border-radius:0!important;
}
button::after{
  content: none;
}